node {

    try {
     
        stage ('Ansible') {
            
            ansiblePlaybook colorized: true, 
            installation: 'ansible', 
            inventory: 'hosts', 
            playbook: 'install_environment.yml', 
            credentialsId: 'srv_id', 
            disableHostKeyChecking: true, 
            tags: 'git'

        }
    
    } 
    
    catch(ex) {
                    
        error("Stage Ansible GIT failure!");
                    
    }

}
